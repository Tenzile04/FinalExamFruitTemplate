@model List<Setting>
@{
    int count = 0;
}
<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Settings</h1>
   
</div>
<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Key</th>
                <th scope="col">Value</th>              
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Key</td>
                    <td>@item.Value</td>

                    <td>
                        <a asp-action="update" asp-controller="setting" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
