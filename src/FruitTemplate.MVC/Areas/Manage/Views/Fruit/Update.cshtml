@model Fruit
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">ImageFile</label>
        <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
        <span asp-validation-for="ImageFile" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>